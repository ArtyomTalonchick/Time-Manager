<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeManager.TimeTable">
    <ContentPage.Content>
        <Grid x:Name="GridOfTimeTable">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <DatePicker x:Name="DatePickerOfTimeTable" Grid.Row="0"/>
            <ListView x:Name="ListOfTimeItem" Grid.Row="1"/>
            <Editor x:Name="ItemEditor" Grid.Row="2" Focused="ItemEditor_Focused"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>