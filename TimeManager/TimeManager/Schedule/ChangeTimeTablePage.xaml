<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeManager.ChangeTimeTablePage">
    <ContentPage.Content>
        <Grid x:Name="GridOfTimeTable">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="DatePickerOfTimeTable" Grid.Column="0" HorizontalOptions="Start" DateSelected="DatePickerOfTimeTable_DateSelected"/>
                <Button x:Name="AddScheduleTemplateButton" Text="Добавить шаблон" Grid.Column="1" HorizontalOptions="End" Clicked="AddScheduleTemplateButton_Clicked"/>
            </Grid>
            <ScrollView Grid.Row="1">
                <ScrollView.Content>
                    <Grid x:Name="GridOfTimeItem"/>
                </ScrollView.Content>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>